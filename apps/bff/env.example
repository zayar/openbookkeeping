# =============================================
# BFF (Backend for Frontend) Configuration
# =============================================

# =============================================
# DATABASE CONFIGURATION
# =============================================

# BFF Database (Prisma) - Separate from Open Accounting
BFF_DATABASE_URL="mysql://username:password@localhost:3306/aiaccounting_bff"

# Open Accounting Server Configuration
APP_ENV=development
BFF_URL=http://localhost:3001
OA_BASE_URL=https://oa-server.example.com
DB_URL=
DB_HOST=
DB_USER=
DB_PASSWORD=
DB_NAME=
TENANT_ID=test_org
LOG_LEVEL=info
ALLOWED_ORIGINS=http://localhost:3000
COOKIE_SECRET=replace-with-strong-secret
OA_API_KEY=""  # If OA requires API key
OA_ACCEPT_VERSION="1.4.0"

# =============================================
# AUTHENTICATION & SECURITY
# =============================================

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-super-secret-key-here"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================
# CLOUD SERVICES
# =============================================

# Google Cloud Project
GOOGLE_CLOUD_PROJECT_ID="aiaccount-1c845"

# Cloud SQL Connection (for production)
CLOUD_SQL_CONNECTION_NAME="aiaccount-1c845:us-central1:aiaccounting-bff"

# Secret Manager (for production secrets)
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"

# =============================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================

REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# =============================================
# APPLICATION SETTINGS
# =============================================

# Environment
NODE_ENV="development"
PORT=3001

# Logging
LOG_LEVEL="debug"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# =============================================
# WEBHOOK & INTEGRATION SETTINGS
# =============================================

# Webhook secret for external integrations
WEBHOOK_SECRET="your-webhook-secret"

# Slack integration (optional)
SLACK_WEBHOOK_URL=""

# =============================================
# FEATURE FLAGS
# =============================================

# Enable specific features
ENABLE_CACHING=true
ENABLE_AUDIT_LOGS=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBHOOKS=false

# =============================================
# SYNC & BACKGROUND JOBS
# =============================================

# How often to sync with OA server (in minutes)
SYNC_INTERVAL_MINUTES=30

# Background job processing
ENABLE_BACKGROUND_JOBS=true
JOB_CONCURRENCY=5

# =============================================
# MONITORING & ANALYTICS
# =============================================

# Application monitoring
SENTRY_DSN=""

# Analytics
GOOGLE_ANALYTICS_ID=""

# Health check endpoints
HEALTH_CHECK_ENABLED=true